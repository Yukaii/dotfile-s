background-blur-radius     = 25
unfocused-split-opacity    = 0.85

# Quick terminal

quick-terminal-animation-duration = 0
quick-terminal-position           = bottom

# Shaders
# custom-shader = shaders/retro-terminal.glsl

# Keybindings
keybind = ctrl+shift+right=goto_split:right
keybind = ctrl+shift+left=goto_split:left
keybind = ctrl+shift+up=goto_split:top
keybind = ctrl+shift+down=goto_split:bottom

keybind = super+n=new_window
keybind = super+v=paste_from_clipboard
keybind = super+shift+k=clear_screen

keybind = global:alt+shift+q=toggle_quick_terminal

# Tmux related Keybindings

# \x02 is ctrl+b (default tmux prefix)
# \x01 is ctrl+a (common alternative tmux prefix)
# \x00 is ctrl+space
# \x11 is ctrl+q

# tsm popup shrotcut toggle
keybind = ctrl+'=text:\x11'

# tmux navigation
keybind = ctrl+alt+p=text:\x11p
keybind = ctrl+alt+n=text:\x11n
# keybind = ctrl+shift+tab=text:\x11p
# keybind = ctrl+tab=text:\x11n
keybind = ctrl+alt+t=text:\x11T
keybind = ctrl+alt+r=text:\x11r

keybind = ctrl+alt+left=text:\x11h
keybind = ctrl+alt+right=text:\x11l
keybind = ctrl+alt+up=text:\x11k
keybind = ctrl+alt+down=text:\x11j

# other tmux goods

# copy mode
keybind = ctrl+alt+[=text:\x11[
# clear history
keybind = ctrl+alt+k=text:\x11\x1bl
# split
keybind = ctrl+alt+'=text:\x11"
# vertical split
keybind = ctrl+alt+/=text:\x11|
# toggle zoom
keybind = ctrl+alt+z=text:\x11z

# tmux panel jump
keybind = ctrl+alt+physical:zero=text:\x110
keybind = ctrl+alt+physical:one=text:\x111
keybind = ctrl+alt+physical:two=text:\x112
keybind = ctrl+alt+physical:three=text:\x113
keybind = ctrl+alt+physical:four=text:\x114
keybind = ctrl+alt+physical:five=text:\x115
keybind = ctrl+alt+physical:six=text:\x116
keybind = ctrl+alt+physical:seven=text:\x117
keybind = ctrl+alt+physical:eight=text:\x118
keybind = ctrl+alt+physical:nine=text:\x119

# regular tmux panel jump (combine with remote session with default prefix)
keybind = ctrl+alt+shift+physical:zero=text:\x020
keybind = ctrl+alt+shift+physical:one=text:\x021
keybind = ctrl+alt+shift+physical:two=text:\x022
keybind = ctrl+alt+shift+physical:three=text:\x023
keybind = ctrl+alt+shift+physical:four=text:\x024
keybind = ctrl+alt+shift+physical:five=text:\x025
keybind = ctrl+alt+shift+physical:six=text:\x026
keybind = ctrl+alt+shift+physical:seven=text:\x027
keybind = ctrl+alt+shift+physical:eight=text:\x028
keybind = ctrl+alt+shift+physical:nine=text:\x029

keybind = ctrl+alt+shift+left=text:\x02p
keybind = ctrl+alt+shift+right=text:\x02n
