{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "foreground": "#96d0ff",
          "background": "#2d333b",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4"
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b4",
          "foreground": "#2d333b",
          "background": "#c6e6ff",
          "properties": {
            "style": "mixed",
            "enable_hyperlink": true,
            "home_icon": "\uF7DB",
            "folder_icon": "\uF115",
            "folder_separator_icon": " \uE0B1 "
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b4",
          "foreground": "#2d333b",
          "background": "#f69d50",
          "properties": {
            "display_status": true,
            "display_stash_count": true,
            "display_upstream_icon": true,
            "branch_max_length": 30
          }
        },
        {
          "type": "exit",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#ff8080",
          "properties": {
            "prefix": "\uE20F"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "\ue0b6",
          "invert_powerline": true,
          "foreground": "#ffffff",
          "background": "#daaa3f",
          "properties": {
            "threshold": 500,
            "style": "austin",
            "prefix": " <#fefefe>\ufbab</> "
          }
        },        
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "\ue0b6",
          "invert_powerline": true,
          "foreground": "#ffffff",
          "background": "#57ab5a",
          "properties": {
            "prefix": " \uE718 "
          }
        },
        {
          "type": "time",
          "style": "powerline",
          "invert_powerline": true,
          "powerline_symbol": "\ue0b6",
          "background": "#373e47",
          "foreground": "#ffffff",
          "properties": {
            "time_format": "Mon 1/2 3:04 PM"
          }
        },
        {
          "type": "battery",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "invert_powerline": true,
          "powerline_symbol": "\ue0b6",
          "foreground": "#193549",
          "background": "#daaa3f",
          "properties": {
            "battery_icon": "",
            "discharging_icon": "\uf57d ",
            "charging_icon": "\uf583 ",
            "charged_icon": "\uf578 ",
            "color_background": true,
            "charged_color": "#4caf50",
            "charging_color": "#f47067",
            "discharging_color": "#c96198",
            "postfix": "\uF295 ",
            "display_charging": true
          }
        }
      ]
    },
    {
      "type": "newline"
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "foreground": "#96d0ff",
          "background": "#2d333b",
          "properties": {
            "prefix": "",
            "text": " \uf113"
          }
        }
      ]
    }

  ],
  "final_space": true
}
